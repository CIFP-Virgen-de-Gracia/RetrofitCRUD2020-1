<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/listaUser">

    <TextView
            android:id="@+id/listaUserTxtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
    />

    <TextView
            android:id="@+id/listaUserTxtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
    />
    <TextView
            android:id="@+id/listaUserTxtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
    />
    <TextView
            android:id="@+id/listaUserTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
    />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/listaUserIvAvatar"/>

</LinearLayout>