<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/mainLayout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" tools:ignore="MissingConstraints" android:id="@+id/mainLinearLayout">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/usuariosScroll">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usuariosRecycler"
                    android:background="#D6D6D6"
                    tools:listitem="@layout/lista_usuarios_item"/>
        </ScrollView>

    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/mainLinearLayout"
            app:layout_constraintBottom_toTopOf="@+id/mainLinearLayout"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_action_reload"
            android:id="@+id/mainBtnObtener" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_action_add"
            android:id="@+id/mainBtnAÃ±adir" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:backgroundTint="@color/design_default_color_secondary"/>


</androidx.constraintlayout.widget.ConstraintLayout>