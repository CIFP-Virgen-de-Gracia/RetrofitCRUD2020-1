<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/mainLayout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" tools:ignore="MissingConstraints" android:id="@+id/mainLinearLayout">

        <Button
                android:id="@+id/mainBtnAñadir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir Producto"
                android:background="#BA55D3"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        <Button
                android:id="@+id/mainBtnObtener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Obtener Productos"
                android:background="#32CD32"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"/>

        <ListView
                android:id="@+id/mainListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/mainLinearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>